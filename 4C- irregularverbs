    <script>
        // ä¸è§„åˆ™åŠ¨è¯æ•°æ® - ç®€åŒ–ä¸ºæ•°ç»„å½¢å¼ [base, past, participle]
        const irregularVerbs = [
            ["awake", "awoke", "awoken"],
